<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewActivity">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo_1"
            style="@style/Card">

            <include
                layout="@layout/photo"
                android:transitionName="photo1" />

            <TextView
                android:id="@+id/show_photo_1"
                style="@style/CardTitle"
                android:text="莲花峰风景区" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo_2"
            style="@style/Card">

            <include
                layout="@layout/photo"
                android:transitionName="photo2" />

            <TextView
                android:id="@+id/show_photo_2"
                style="@style/CardTitle"
                android:text="南澳岛" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo_3"
            style="@style/Card">

            <include
                layout="@layout/photo"
                android:transitionName="photo3" />

            <TextView
                android:id="@+id/show_photo_3"
                style="@style/CardTitle"
                android:text="前美村" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo_4"
            style="@style/Card">

            <include
                layout="@layout/photo"
                android:transitionName="photo4" />

            <TextView
                android:id="@+id/show_photo_4"
                style="@style/CardTitle"
                android:text="礐石风景区" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>